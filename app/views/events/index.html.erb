<h1>List of all events - events#index</h1>


<h2>Upcoming Events</h2>
<% @events.each  do |event| %>
  <% if event.event_date != nil && event.event_date >= Time.now %>
    <li><%= event.name %></li>
    <li><%= event.description %></li>
    <li><%= event.creator_id %></li>
    <li><%= event.event_date %></li>
  <% end %>
<% end %>

<br/>
<br/>

<h2>Previous Events</h2>
<% @events.each  do |event| %>
  <% if event.event_date != nil && event.event_date < Time.now %>
    <li><%= event.name %></li>
    <li><%= event.description %></li>
    <li><%= event.creator_id %></li>
    <li><%= event.event_date %></li>
  <% end %>
<% end %>







